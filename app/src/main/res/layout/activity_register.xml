<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_sign_up"
    android:layout_width="match_parent"
    android:layout_height="812dp"
    android:background="@drawable/container_sign_up"
    android:clipToPadding="false"
    android:gravity="left|top"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/container_page_header"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="60dp">

        <TextView
            android:id="@+id/text_login"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="-1dp"
            android:layout_gravity="top|right"
            android:gravity="right|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Login"
            android:textColor="#FF2F656C"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/text_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="-0.5dp"
            android:layout_marginBottom="-0.5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Sign Up"
            android:textColor="#FF000000"
            android:textSize="30dp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/container_input_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp">

        <ImageView
            android:id="@+id/image_bg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_bg" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="-0.5dp"
            android:layout_marginBottom="-1dp"
            android:layout_gravity="center_vertical"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Name"
            android:textColor="#FFBDBDBD"
            android:textSize="16dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/container_input_text1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/image_bg1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_bg1" />

        <TextView
            android:id="@+id/text_email"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="-0.5dp"
            android:layout_marginBottom="-1dp"
            android:layout_gravity="center_vertical"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Email"
            android:textColor="#FFBDBDBD"
            android:textSize="16dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/container_input_text2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/image_bg2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_bg2" />

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:hint="Password"
            android:textColorHint="#FFBDBDBD"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_show"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical"
            android:gravity="center_vertical|end"
            android:text="Show"
            android:textColor="#FF2F656C"
            android:textSize="16sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/container_checkbox_option_empty"
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp">

        <FrameLayout
            android:id="@+id/image_checkbox_empty"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="0.5dp"
            android:layout_gravity="top|left">

            <CheckBox
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/drawable_shape"
                android:scaleType="centerInside" />
        </FrameLayout>

        <TextView
            android:id="@+id/text_newsletter_promo_info"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="-1dp"
            android:layout_gravity="top"
            android:gravity="left|top"
            android:includeFontPadding="false"
            android:lineHeight="16.94dp"
            android:text="I would like to receive your newsletter and other promotional information."
            android:textColor="#FF666666"
            android:textSize="14dp" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/btn_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/btn_primary"
        android:clipToPadding="false"
        android:gravity="center_horizontal|top"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/btn_primary_text"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:gravity="center_horizontal|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Sign Up"
            android:textColor="#FFFFFFFF"
            android:textSize="16dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginLeft="0.5dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:gravity="left|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Forgot your password?"
        android:textColor="#FF2F656C"
        android:textSize="16dp" />
</LinearLayout>