<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_chat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/container_chat"
    android:gravity="start|top"
    android:orientation="vertical"
    tools:context=".ChatActivity">


  <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:layout_marginTop="-17dp"
      android:background="@drawable/image_rectangle"
      app:titleTextColor="@android:color/white"
      app:subtitleTextColor="@android:color/white"
      app:contentInsetStart="0dp"
      app:contentInsetEnd="0dp"
      app:contentInsetLeft="0dp"
      app:contentInsetRight="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <ImageButton
          android:id="@+id/overflow_menu_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/icon_more"
          android:contentDescription="@string/menu"
          android:background="?attr/selectableItemBackgroundBorderless"
          android:clickable="true"
          android:focusable="true"
          android:layout_alignParentEnd="true"
          android:layout_marginEnd="12dp"
          android:layout_marginTop="30dp"/>



      <TextView
          android:id="@+id/text_eduka_one"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:layout_marginTop="30dp"
          android:layout_gravity="start|top"
          android:gravity="start|center_vertical"
          android:includeFontPadding="false"
          android:maxLines="1"
          android:singleLine="true"
          android:text="EdukaOne"
          android:textColor="#FFFFFFFF"
          android:textSize="20sp" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center_vertical"
          android:layout_marginTop="116dp">

        <TextView
            android:id="@+id/text_chat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:includeFontPadding="false"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Chat"
            android:textColor="#FFFFFFFF"
            android:textSize="20sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/text_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:includeFontPadding="false"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:text="History"
            android:textColor="#FFFFFFFF"
            android:textSize="20sp" />
      </LinearLayout>
    </RelativeLayout>
  </androidx.appcompat.widget.Toolbar>

  <!-- Move RecyclerView inside RelativeLayout -->

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recycler_view_chat"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_above="@+id/container_input_search"
      android:layout_below="@id/toolbar"
      android:layout_marginStart="16dp"

      android:layout_marginEnd="16dp"
      android:layout_marginBottom="8dp"
      android:nestedScrollingEnabled="false" />

  <FrameLayout
      android:id="@+id/container_input_search"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="14dp"
      android:layout_marginEnd="18dp"
      android:layout_marginBottom="16dp">

    <ImageView
        android:id="@+id/image_input_search_b_g"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_input_search_b_g" />

    <TextView
        android:id="@+id/text_message_here"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginStart="16dp"
        android:layout_gravity="center_vertical"
        android:gravity="start|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Message here..."
        android:textColor="#FFBDBDBD"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/image_icon_send"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="center_vertical|end"
        android:scaleType="centerInside"
        android:src="@drawable/image_icon_send" />
  </FrameLayout>
</RelativeLayout>
