<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/container_log_in"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/container_log_in"
  android:clipToPadding="false"
  android:gravity="left|top"
  android:orientation="vertical">
  
  <FrameLayout
    android:id="@+id/container_page_header"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="60dp">
    
    <TextView
      android:id="@+id/text_log_in"
      android:layout_width="wrap_content"
      android:layout_height="37dp"
      android:layout_marginLeft="1.5dp"
      android:layout_marginTop="-0.5dp"
      android:layout_marginBottom="-0.5dp"
      android:layout_gravity="center_horizontal"
      android:gravity="center_horizontal|center_vertical"
      android:includeFontPadding="false"
      android:maxLines="1"
      android:singleLine="true"
        android:text="Login"
      android:textColor="#FF000000"
      android:textSize="30dp" />
  </FrameLayout>
  
  <FrameLayout
    android:id="@+id/container_input_text"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="32dp">
    
    <ImageView
      android:id="@+id/image_bg"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:scaleType="centerCrop"
      android:src="@drawable/image_bg" />
    
    <TextView
      android:id="@+id/text_email"
      android:layout_width="wrap_content"
      android:layout_height="21dp"
      android:layout_marginLeft="16dp"
      android:layout_marginTop="-0.5dp"
      android:layout_marginBottom="-1dp"
      android:layout_gravity="center_vertical"
      android:gravity="left|center_vertical"
      android:includeFontPadding="false"
      android:maxLines="1"
      android:singleLine="true"
        android:text="Email"
      android:textColor="#FFBDBDBD"
      android:textSize="16dp" />
  </FrameLayout>
  
  <FrameLayout
    android:id="@+id/container_input_text1"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp">
    
    <ImageView
      android:id="@+id/image_bg1"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:scaleType="centerCrop"
      android:src="@drawable/image_bg1" />
    
    <TextView
      android:id="@+id/text_password"
      android:layout_width="wrap_content"
      android:layout_height="21dp"
      android:layout_marginLeft="16dp"
      android:layout_marginTop="-0.5dp"
      android:layout_marginBottom="-1dp"
      android:layout_gravity="center_vertical"
      android:gravity="left|center_vertical"
      android:includeFontPadding="false"
      android:maxLines="1"
      android:singleLine="true"
        android:text="Password"
      android:textColor="#FFBDBDBD"
      android:textSize="16dp" />
    
    <TextView
      android:id="@+id/text_show"
      android:layout_width="wrap_content"
      android:layout_height="21dp"
      android:layout_marginRight="16dp"
      android:layout_marginTop="-0.5dp"
      android:layout_marginBottom="-1dp"
      android:layout_gravity="right|center_vertical"
      android:gravity="right|center_vertical"
      android:includeFontPadding="false"
      android:maxLines="1"
      android:singleLine="true"
        android:text="Show"
      android:textColor="#FF2F656C"
      android:textSize="16dp" />
  </FrameLayout>
  
  <TextView
    android:id="@+id/text_google_account"
    android:layout_width="wrap_content"
    android:layout_height="20dp"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="-1dp"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal|center_vertical"
    android:includeFontPadding="false"
    android:maxLines="1"
    android:singleLine="true"
      android:text="Use Google Account"
    android:textColor="#FF2F656C"
    android:textSize="15dp" />

  <TextView
      android:id="@+id/text_sign_out"
      android:layout_width="wrap_content"
      android:layout_height="20dp"
      android:layout_marginLeft="0dp"
      android:layout_marginTop="315dp"
      android:layout_marginBottom="-335dp"
      android:layout_gravity="center_horizontal"
      android:gravity="center_horizontal|center_vertical"
      android:includeFontPadding="false"
      android:maxLines="1"
      android:singleLine="true"
      android:text="Sign Out"
      android:textColor="#FF2F656C"
      android:textSize="15dp" />
  
  <LinearLayout
    android:id="@+id/container_button_primary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="347dp"
    android:background="@drawable/container_button_primary"
    android:clipToPadding="false"
    android:gravity="center_horizontal|top"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    android:paddingTop="15dp">
    
    <TextView
      android:id="@+id/text_log_in1"
      android:layout_width="wrap_content"
      android:layout_height="21dp"
      android:gravity="center_horizontal|center_vertical"
      android:includeFontPadding="false"
      android:maxLines="1"
      android:singleLine="true"
      android:text="Log In"
      android:textColor="#FFFFFFFF"
      android:textSize="16dp" />
  </LinearLayout>
  
  <TextView
    android:id="@+id/text_forgot_password"
    android:layout_width="wrap_content"
    android:layout_height="21dp"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="20dp"
    android:layout_gravity="center_horizontal"
    android:gravity="left|center_vertical"
    android:includeFontPadding="false"
    android:maxLines="1"
    android:singleLine="true"
    android:text="Forgot your password?"
    android:textColor="#FF2F656C"
    android:textSize="16dp" />



</LinearLayout>
